pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                dir('jenkins-maven-demo') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('jenkins-maven-demo') {
                    withSonarQubeEnv('SonarQube') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Deploy to Artifactory') {
            steps {
                dir('jenkins-maven-demo') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}
