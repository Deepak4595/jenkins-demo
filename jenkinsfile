pipeline {
    agent any

    stages {
        stage('DEBUG: Show workspace') {
            steps {
                sh '''
                echo "===== CURRENT DIRECTORY ====="
                pwd
                echo "===== LIST FILES ====="
                ls -l
                echo "===== FIND pom.xml ====="
                find . -name pom.xml
                '''
            }
        }
    }
}
